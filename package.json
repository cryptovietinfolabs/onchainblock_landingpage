    "gsap": "^3.12.5",
    "lodash": "^4.17.21",
    "lokijs": "1.x",
    "next": "14.1.0",
    "next-seo": "^6.4.0",
    "prettier": "^3.2.4",
    "react": "^18",
    "react-dom": "^18",
    "react-inlinesvg": "^4.1.1",
